pipeline {
    agent any

    tools {
        maven 'Maven3'
        jdk 'JDK17'
    }

    environment {
        REPO_URL = 'https://github.com/DugnCon/BackEnd-CampusLearningUser.git'
        DOCKER_IMAGE = 'your_dockerhub_username/campuslearning'  // ğŸ‘‰ thay tÃªn tháº­t
        CONTAINER_NAME = 'spring_container_2'
        DOCKER_CREDENTIAL_ID = 'dockerhub-cred'  // ğŸ‘‰ táº¡o trong Jenkins Credentials
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Äang láº¥y code tá»« Git...'
                git branch: 'main', url: "${REPO_URL}"
            }
        }

        stage('Build WAR') {
            steps {
                echo 'ğŸ—ï¸ Äang build Spring Boot á»©ng dá»¥ng...'
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Äang build Docker image má»›i...'
                sh 'docker build -t $DOCKER_IMAGE:latest .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                echo 'ğŸ“¤ Äang Ä‘áº©y image lÃªn Docker Hub...'
                withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIAL_ID}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push $DOCKER_IMAGE:latest
                    '''
                }
            }
        }

        stage('Deploy Container') {
            steps {
                echo 'ğŸš€ Äang triá»ƒn khai container má»›i...'
                sh '''
                    docker stop $CONTAINER_NAME || true
                    docker rm $CONTAINER_NAME || true
                    docker run -d --name $CONTAINER_NAME -p 8080:8080 $DOCKER_IMAGE:latest
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… Triá»ƒn khai CI/CD Docker thÃ nh cÃ´ng!'
        }
        failure {
            echo 'âŒ Lá»—i xáº£y ra trong pipeline, kiá»ƒm tra log Jenkins!'
        }
    }
}
